[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[user]
	useConfigOnly = true
	name = Pepper Lebeck-Jobe
	signingkey = ~/.ssh/sign_rsa.pub
[commit]
	gpgsign = true
[color]
	ui = true
[core]
	excludesfile = ~/.config/git/ignore
[pull]
	rebase = false
[push]
	default = simple
[merge]
	renamelimit = 2500
[alias]
	a = add .
	c = commit
	co = checkout
	rv = remote -v
	mine = config user.email eljobe@gmail.com
	work = config user.email pepper@offchainlabs.com
	fs = !git fetch && git status
	ls-textfiles = !git ls-files | xargs -If file f | grep ':.*text' | cut -d':' -f1
	unpushed = diff @{push}.. --name-only
	subs = submodule update --force --init --recursive
	yamldiff = "!bash -lc 'for f in $(git diff --cached --name-only --diff-filter=ACMRT | grep -E \"\\.ya?ml$\"); do echo \"=== $f ===\"; yamldiff <(git show HEAD:$f 2>/dev/null || echo \"{}\") <(git show :$f); done'"
	yamldiff-wc = "!bash -lc 'for f in $(git diff --name-only --diff-filter=ACMRT | grep -E \"\\.ya?ml$\"); do echo \"=== $f ===\"; yamldiff <(git show :$f 2>/dev/null || echo \"{}\") \"$f\"; done'"
[github]
	user = eljobe
[init]
	defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential
